{
  "name": "es6-npm-package-scaffold",
  "description": "Opinionated npm package scaffold (supports es6)",
  "main": "./lib",
  "scripts": {
    "lint": "eslint ./src ./test",
    "build": "babel ./src --out-dir ./lib --copy-files",
    "clean": "rimraf ./lib",
    "pretest": "npm run lint",
    "test": "babel-node test/*.js",
    "preversion": "npm test",
    "version:auto": "npm version $(conventional-recommended-bump --preset=angular)",
    "postversion": "git push --tags && git push",
    "release": "npm run version:auto && npm publish",
    "prepublish": "npm run build"
  },
  "keywords": [],
  "author": "Olivier Lalonde <olalonde@gmail.com>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.1.18",
    "babel-eslint": "^4.1.5",
    "babel-preset-es2015": "^6.1.18",
    "blue-tape": "^0.1.10",
    "conventional-recommended-bump": "0.0.3",
    "eslint": "^1.9.0",
    "eslint-config-airbnb": "^1.0.0",
    "rimraf": "^2.4.3"
  },
  "version": "0.0.1"
}
